<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvUserMainactivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Username"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvPassMainActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Password"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:focusable="true"
            android:gravity="top"
            android:hint="Input Your Status"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btnKlik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Klik" />

        <TextView
            android:id="@+id/tvSetText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="DI Set Disini"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btnHitung"
            android:text="Hitung Bangun Datar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</ScrollView>

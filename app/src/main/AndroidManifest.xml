<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.blogbasbas.androiddasar">

    <!--
    - manifest bisa di istilahkan daftar isi, utk regis activty dan permission app
    - inter filter fungsinya launch actiivty pertama
    -@mipmap ad/ nama folder
    -@string & @style nama file

    -res = Resource
    bisa simpan gambar
    bisa simpan style, string
    bisa simpan file video,mp3 = raw

    - tidak bisa huruf besar
    -->

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".KelasCoba"></activity>
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MenhitungBangunDatarActivity"></activity>
    </application>

</manifest>